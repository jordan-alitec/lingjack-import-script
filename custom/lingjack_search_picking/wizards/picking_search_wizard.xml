<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Picking Search Wizard Form View -->
    <record id="view_picking_search_wizard_form" model="ir.ui.view">
        <field name="name">picking.search.wizard.form</field>
        <field name="model">picking.search.wizard</field>
        <field name="arch" type="xml">
            <form string="Search Picking">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <i class="fa fa-search"/> Search Stock Picking
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="picking_name" 
                                   placeholder="Enter picking number..."
                                   class="o_input_lg"/>
                        </group>
                    </group>

                    <!-- Action Buttons -->
                    <group>
                        <group>
                            <button name="action_scan_barcode"
                                    string="Scan Barcode"
                                    type="object"
                                    class="btn-primary"
                                    icon="fa-camera"/>
                            <button name="action_search"
                                    string="Search"
                                    type="object"
                                    class="btn-success"
                                    icon="fa-search"/>
                        </group>
                    </group>

                    <!-- Display Picking Information when found -->
                    <group invisible="not picking_id">
                        <field name="picking_id" invisible="1"/>
                        <field name="picking_info" nolabel="1"/>
                    </group>

                </sheet>
                <footer>
                    <!-- Open Picking button (only visible when picking found) -->
                    <button name="action_open_picking"
                            string="Open Picking"
                            type="object"
                            class="btn-primary"
                            invisible="not picking_id"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

