<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Previous Transfer Search Wizard Form View -->
    <record id="view_previous_transfer_search_wizard_form" model="ir.ui.view">
        <field name="name">previous.transfer.search.wizard.form</field>
        <field name="model">previous.transfer.search.wizard</field>
        <field name="arch" type="xml">
            <form string="Search by Previous Transfer">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <i class="fa fa-exchange"/> Search by Previous Transfer
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="previous_transfer" 
                                   placeholder="Enter previous transfer number..."
                                   class="o_input_lg"/>
                        </group>
                    </group>

                    <!-- Action Buttons -->
                    <group>
                        <group>
                            <button name="action_scan_barcode"
                                    string="Scan Barcode"
                                    type="object"
                                    class="btn-primary"
                                    icon="fa-camera"/>
                            <button name="action_search"
                                    string="Search"
                                    type="object"
                                    class="btn-success"
                                    icon="fa-search"/>
                        </group>
                    </group>

                    <!-- Display Transfer Information when found -->
                    <group invisible="not picking_id">
                        <field name="picking_id" invisible="1"/>
                        <field name="picking_info" nolabel="1"/>
                    </group>

                </sheet>
                <footer>
                    <!-- Open Transfer button (only visible when picking found) -->
                    <button name="action_open_picking"
                            string="Open Transfer"
                            type="object"
                            class="btn-primary"
                            invisible="not picking_id"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

