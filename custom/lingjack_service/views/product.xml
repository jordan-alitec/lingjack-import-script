<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_general_inherit_service_always_show" model="ir.ui.view">
        <field name="name">product.template.form.inherit.general.service_always_show</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='company_id']" position="after">
                <div name="options" position="inside">
                    <span class="d-inline-flex">
                        <field name="service_always_show"/>
                        <label for="service_always_show"/>
                    </span>
                </div>
            </xpath>
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-flex">
                    <field name="is_control_tag"/>
                    <label for="is_control_tag"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>
