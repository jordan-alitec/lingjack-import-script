<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Control Tag Report Wizard Form View -->
    <record id="view_control_tag_report_wizard_form" model="ir.ui.view">
        <field name="name">control.tag.report.wizard.form</field>
        <field name="model">control.tag.report.wizard</field>
        <field name="groups_id" eval="[(4, ref('lingjack_service.group_control_tag'))]"/>
        <field name="arch" type="xml">
            <form string="Control Tag Report">
                <group>
                    <group string="Report Parameters">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="note" placeholder="e.g.Missing RW99999"/>
                    </group>
                </group>
                <group string="Generated File" invisible="not excel_file">
                    <field name="excel_file" filename="file_name" readonly="1"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_generate_excel" string="Generate Excel"
                            type="object" class="btn-primary"
                            invisible="excel_file"/>
                    <button name="action_download_excel" string="Download Excel"
                            type="object" class="btn-primary"
                            invisible="not excel_file"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Control Tag Report Wizard Action (restricted to Control Tag group) -->
    <record id="action_control_tag_report_wizard" model="ir.actions.act_window">
        <field name="name">Control Tag Report</field>
        <field name="res_model">control.tag.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('lingjack_service.group_control_tag'))]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate Control Tag Report (Excel)
            </p>
            <p>
                Set the invoice date range and optionally add a note. The report lists control tags with company name, date, customer reference, project, item code, item description, control tag (serial), quantity, key by, sales person and PO #.
            </p>
        </field>
    </record>

    <!-- Menu: Sales > Reporting > Control Tag Report -->
    <menuitem id="menu_control_tag_report_wizard"
              name="Control Tag Report"
              parent="sale.menu_sale_report"
              action="action_control_tag_report_wizard"
              sequence="50"
              groups="lingjack_service.group_control_tag"/>
</odoo>
