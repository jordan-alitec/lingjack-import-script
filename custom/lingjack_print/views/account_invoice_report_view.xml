<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_report_tree_margin" model="ir.ui.view">
        <field name="name">account.invoice.report.tree.margin</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.account_invoice_report_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_subtotal']" position="after">
                <field name="margin_percent_revenue" optional="hide"/>
                <field name="margin_percent_cost" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
