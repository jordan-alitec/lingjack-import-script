<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_debit_note_document" inherit_id="lingjack_print.report_tax_invoice_document" primary="True">
        <xpath expr="//h2" position="replace">
            <div class="row">
                <h2 style="text-align: center; color: #1f4e79; margin-top:30px;">
                    <t>
                        DEBIT NOTE
                    </t>
                </h2>
            </div>
        </xpath>
        <xpath expr="//table[@class='table-borderless']/tr[1]/td[1]"
               position="replace">
            <td style="padding: 2px 4px;">
                <span>Debit Note No</span>
            </td>
        </xpath>
    </template>

    <template id="report_debit_note">
        <t t-call="web.html_container">
            <t t-set="is_tax_invoice" t-value="true"/>
            <t t-foreach="docs" t-as="o">
                <t t-call="lingjack_print.report_debit_note_document"/>
            </t>
        </t>
    </template>


    <record id="action_report_debit_note" model="ir.actions.report">
        <field name="name">Debit Note</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">lingjack_print.report_debit_note</field>
        <field name="report_file">lingjack_print.report_debit_note</field>
        <field name="print_report_name">'Invoice - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>

