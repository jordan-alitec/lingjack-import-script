<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_website_url" model="ir.ui.view">
        <field name="name">product.template.form.website.url</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="website_url" placeholder="https://example.com/product/..."/>
            </xpath>
        </field>
    </record>
</odoo>
