<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit res.users form view to add assignment notification preference -->
    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="name">res.users.form.inherit.disable.assign.notify</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='preferences']" position="inside">
                <group>
                <field name="send_assign_notify" 
                       string="Assignment Notifications"
                       help="Receive notifications when assigned to records as follower"/>
                </group>
              
            </xpath>
        </field>
    </record>
</odoo>
