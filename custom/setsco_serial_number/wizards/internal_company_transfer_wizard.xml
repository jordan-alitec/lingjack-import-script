<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_internal_company_transfer_wizard_form" model="ir.ui.view">
        <field name="name">setsco.internal.company.transfer.wizard.form</field>
        <field name="model">setsco.internal.company.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign to Internal Company">
                <sheet>
                    <group>
                        <field name="internal_company_id"/>
                        <field name="note" placeholder="Optional note"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>

                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_internal_company_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Assign to Internal Company</field>
        <field name="res_model">setsco.internal.company.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>


