<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Setsco Serial Assignment Wizard Form View -->
    <record id="view_setsco_serial_assignment_wizard_form" model="ir.ui.view">
        <field name="name">setsco.serial.assignment.wizard.form</field>
        <field name="model">setsco.serial.assignment.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Setsco Serial Numbers">
                <group>
                    <group>
                        <field name="production_id" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="category_id" readonly="1"/>
                        <field name="quantity" readonly="1"/>
                    </group>
                    <group>
                        <field name="use_range_selection"/>
                    </group>
                </group>

                <field name="is_rework" invisible="1"/>
                <!-- Range Selection Section -->
                <group string="Range Selection" invisible="not use_range_selection">
                    <group>
                        <button name="action_scan_start_serial" type="object" string="Scan Start Serial" class="btn-secondary" invisible="1"/>
                        <field name="start_serial_scan_input" placeholder="Scan or enter start serial number" invisible="1"/>
                        <field name="start_serial_id" domain="[('setsco_category_id', '=', category_id), '|', ('product_id', '=', product_id), ('product_id', '=', False), ('is_available', '=', True)]" invisible="is_rework"/>
                        <field name="start_serial_id" domain="[('setsco_category_id', '=', category_id), '|', ('product_id', '=', product_id), ('product_id', '=', False), ('state', '=', 'warehouse')]" invisible="not is_rework"/>
                        <button name="action_scan_end_serial" type="object" string="Scan End Serial" class="btn-secondary" invisible="1"/>
                        <field name="end_serial_scan_input" placeholder="Scan or enter end serial number" invisible="1"/>
                        <field name="end_serial_id" domain="[('setsco_category_id', '=', category_id), '|', ('product_id', '=', product_id), ('product_id', '=', False), ('is_available', '=', True)]" invisible="is_rework"/>
                        <field name="end_serial_id" domain="[('setsco_category_id', '=', category_id), '|', ('product_id', '=', product_id), ('product_id', '=', False), ('state', '=', 'warehouse')]" invisible="not is_rework"/>
                    </group>
                </group>

                <!-- Range Warning -->
                <div class="alert alert-warning" role="alert" invisible="not range_warning">
                    <field name="range_warning" readonly="1" nolabel="1"/>
                </div>
                
                <separator string="Serial Number Assignments"/>
                <field name="assignment_line_ids">
                    <list editable="bottom" create="0" delete="0" edit="1">
                        <field name="sequence" readonly="1"/>
<!--                        <field name="product_id" invisible="1"/>-->
                        
                        <!-- Individual Selection Mode -->
                        <field name="setsco_serial_id"
                                domain="[('setsco_category_id', '=', category_id), '|', ('product_id', '=', product_id), ('product_id', '=', False), ('is_available', '=', True)]" invisible="parent.is_rework"
                               required="not parent.use_range_selection"
                               column_invisible="parent.is_rework"/>
                        <field name="setsco_serial_id"
                               domain="[('setsco_category_id', '=', category_id), '|', ('product_id', '=', product_id), ('product_id', '=', False), ('state', '=', 'warehouse')]" invisible="not parent.is_rework"
                               required="not parent.use_range_selection"
                               column_invisible="not parent.is_rework"/>
                 
                    </list>
                </field>
                
                <footer>
                    <button name="action_update_locations" 
                            string="Update Locations" 
                            type="object" 
                            class="btn-secondary"
                            invisible="1"
                            help="Manually update locations for all setsco serial numbers based on their current state and operations"/>
                    <button name="action_assign_serials" 
                            string="Assign Serials" 
                            type="object" 
                            class="btn-primary"
                            help="Assign the selected setsco serial numbers to the manufacturing order"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo> 