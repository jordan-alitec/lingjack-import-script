<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_internal_company_receive_wizard_form" model="ir.ui.view">
        <field name="name">setsco.internal.company.receive.wizard.form</field>
        <field name="model">setsco.internal.company.receive.wizard</field>
        <field name="arch" type="xml">
            <form string="Receive from Internal Company">
                <sheet>
                    <group>
                        <field name="setsco_category_id" invisible="1"/>
                        <field name="product_id" domain="[('requires_setsco_serial', '=', True),('setsco_category_id', '=', setsco_category_id)]"/>
                        <field name="warehouse_id"/>
                        <field name="company_id" invisible="1"/>
                        <field name="note" placeholder="Optional note"/>

                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_internal_company_receive_wizard" model="ir.actions.act_window">
        <field name="name">Receive from Internal Company</field>
        <field name="res_model">setsco.internal.company.receive.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>


