<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="lingjack_quality_qc_sheet.MrpDisplayMenuDialog.open_qc_sheet"
       t-inherit="mrp_workorder.MrpDisplayMenuDialog" t-inherit-mode="extension">
        <xpath expr="//button[@name='addComponent']" position="after">
            <button t-if="props.record.resModel == 'mrp.workorder' or props.record.resModel == 'mrp.production' "
                    class="btn btn-outline-secondary d-flex justify-content-between align-items-center p-3 fs-3"
                    t-on-click="openQcSpreadsheet"
                    name="lj_open_qc_sheet">
                Open Quality Sheet <i class="oi oi-chevron-right"/>
            </button>
        </xpath>

    </t>
</templates>
