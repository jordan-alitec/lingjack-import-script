<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Menus -->
        <menuitem id="menu_qc_root" name="Quality" sequence="50"/>
        <menuitem id="menu_qc_configuration" name="Configuration" parent="menu_qc_root" sequence="10"/>
        <menuitem id="menu_qc_operations" name="QC" parent="menu_qc_root" sequence="20"/>

        <!-- QC Template -->
        <record id="view_qc_template_tree" model="ir.ui.view">
            <field name="name">qc.template.tree</field>
            <field name="model">qc.template</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="check_cell"/>
                </list>
            </field>
        </record>
        <record id="view_qc_template_form" model="ir.ui.view">
            <field name="name">qc.template.form</field>
            <field name="model">qc.template</field>
            <field name="arch" type="xml">
                <form string="QC Template">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="check_cell"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_qc_template" model="ir.actions.act_window">
            <field name="name">QC Templates</field>
            <field name="res_model">qc.template</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem id="menu_qc_template" name="QC Templates" parent="menu_qc_configuration" action="action_qc_template"/>

        <!-- QC Sheet -->
        <record id="view_qc_sheet_tree" model="ir.ui.view">
            <field name="name">qc.sheet.tree</field>
            <field name="model">qc.sheet</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="template_id"/>
                    <field name="procurement_group_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        <record id="view_qc_sheet_form" model="ir.ui.view">
            <field name="name">qc.sheet.form</field>
            <field name="model">qc.sheet</field>
            <field name="arch" type="xml">
                <form string="QC Sheet">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="template_id" options="{'no_create_edit': True}"/>
                            <field name="procurement_group_id"/>
                            <field name="production_ids" widget="many2many_tags"/>
                            <field name="check_cell"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_qc_sheet" model="ir.actions.act_window">
            <field name="name">QC Sheets</field>
            <field name="res_model">qc.sheet</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem id="menu_qc_sheets" name="QC Sheets" parent="menu_qc_operations" action="action_qc_sheet"/>
    </data>
</odoo>
