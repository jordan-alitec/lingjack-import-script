<odoo>
    <record id="view_product_supplierinfo_form_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.inherit.remarks</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <sheet>
                <group>
                    <group name="Remarks" string="Remarks">
                            <field name="remarks"/>
                    </group>
                </group>
            </sheet>
        </field>
    </record>

     <record id="product_supplierinfo_tree_view_inherit_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="purchase_requisition.product_supplierinfo_tree_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_requisition_id']" position="before">
                <field name="supplier_warranty"/>
            </xpath>
        </field>
    </record>
</odoo>
