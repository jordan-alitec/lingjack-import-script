<odoo>
    <record id="crm_lead_form_inherit_visit_log" model="ir.ui.view">
        <field name="name">crm.lead.form.visit.log</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Visit Log">
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="Visit_purpose_id"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="expected_delivery_date"/>
<!--                <field name="customer_category_id"/>-->
            </xpath>
        </field>
    </record>

    <record id="view_crm_visit_purpose_list" model="ir.ui.view">
        <field name="name">crm.visit.purpose.list</field>
        <field name="model">crm.visit.purpose</field>
        <field name="arch" type="xml">
            <list string="Versions" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_crm_visit_purpose" model="ir.actions.act_window">
        <field name="name">Purpose Of visit</field>
        <field name="res_model">crm.visit.purpose</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add available Purpose of Visit here.
            </p>
        </field>
    </record>


    <menuitem id="menu_crm_visit_purpose"
              name="Purpose Of Visit"
              parent="crm.crm_menu_config"
              action="action_crm_visit_purpose"
              sequence="2"/>


</odoo>
