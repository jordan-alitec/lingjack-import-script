<odoo>
    <data>
        <record id="view_account_payment_form_inherit_receipt_cheque" model="ir.ui.view">
            <field name="name">account.payment.form.inherit.receipt.cheque</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!-- Inserting after the memo field -->
                <xpath expr="//group[@name='main_group']/group[@name='group2']" position="inside">
                    <field name="receipt_category_id"/>
                    <field name="cheque_number"/>
                    <field name="specific_approver_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_id'][2]" position="after">
                    <field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_receipt_category" model="ir.ui.view">
            <field name="name">receipt.category.list</field>
            <field name="model">receipt.category</field>
            <field name="arch" type="xml">
                <list string="Receipt Category" editable="bottom">
                    <field name="name"/>
                </list>
            </field>
        </record>


    <record id="action_receipt_category" model="ir.actions.act_window">
        <field name="name">Receipt Category</field>
        <field name="res_model">receipt.category</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Receipt Category.
            </p>
        </field>
    </record>

    <menuitem id="menu_receipt_category"
              name="Receipt Category"
              parent="account.account_invoicing_menu"
              action="action_receipt_category"/>




    </data>
</odoo>
