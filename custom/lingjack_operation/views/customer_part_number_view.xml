<odoo>
    <record id="view_customer_part_number_form" model="ir.ui.view">
        <field name="name">customer.part.number.form</field>
        <field name="model">customer.part.number</field>
        <field name="arch" type="xml">
            <form string="Customer Part Number">
                                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter Title"/>
                        </h1>
                    </div>
                    <div class="o_row">
                        <field name="replace_with_customer_description" nolabel="1"/>
                        <span>Replace with Customer Description</span>
                    </div>

                    <notebook>
                        <page string="Customer Parts">
                            <field name="part_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="customer_part_number"/>
                                    <field name="customer_description" widget="text"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_part_number_list" model="ir.ui.view">
        <field name="name">customer.part.number.list</field>
        <field name="model">customer.part.number</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_customer_part_number" model="ir.actions.act_window">
        <field name="name">Customer Part Number</field>
        <field name="res_model">customer.part.number</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_customer_part_number"
              name="Customer Part Numbers"
              parent="stock.menu_product_in_config_stock"
              action="action_customer_part_number"/>
</odoo>
