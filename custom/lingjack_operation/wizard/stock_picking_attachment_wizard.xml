<odoo>
    <record id="view_stock_picking_attachment_wizard_form" model="ir.ui.view">
        <field name="name">stock.picking.attachment.wizard.form</field>
        <field name="model">stock.picking.attachment.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Attachments">
                <group>
                    <field name="attachment_ids"
                           widget="many2many_binary"/>
                </group>

                <footer>
                    <button name="action_add_attachments"
                            type="object"
                            string="Upload"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
