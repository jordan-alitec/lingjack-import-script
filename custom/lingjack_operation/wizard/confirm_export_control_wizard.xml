<odoo>
    <record id="view_confirm_export_control_wizard" model="ir.ui.view">
        <field name="name">confirm.export.control.wizard.form</field>
        <field name="model">confirm.export.control.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Export Control Item" version="7.0">
                <group>
                    <p>
                        One or more products in this order are marked as Export Control Item(s).
                        Do you want to proceed with confirmation?
                    </p>
                </group>
                <footer>
                    <button name="confirm_action" type="object" string="Confirm Order" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
