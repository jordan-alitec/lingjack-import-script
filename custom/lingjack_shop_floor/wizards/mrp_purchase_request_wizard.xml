<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_purchase_request_wizard_form" model="ir.ui.view">
        <field name="name">mrp.purchase.request.wizard.form</field>
        <field name="model">mrp.purchase.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Purchase Request">
                <group>
                    <field name="production_id" readonly="1"/>
                </group>
                
                <group>
                    <field name="action_type" widget="radio"/>
                </group>
                
                <group invisible="action_type != 'append_existing'">
                    <field name="existing_pr_id" 
                           domain="[('state', '=', 'draft'),('purchase_type_id.name','=','Production')]"
                           options="{'no_create': True}"/>
                </group>
                
                <notebook>
                    <page string="Components to Add">
                        <field name="component_line_ids">
                           <list string="Components" create="0" edit="1" delete="1" editable="top">
                                <field name="product_id" readonly="1"/>
                                <field name="product_id" readonly="0" invisible="1"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="free_qty"/>
                                <field name="product_qty"/>
                                <field name="product_uom_id"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                
                <footer>
                    <button name="action_create_purchase_request" 
                            string="Create Purchase Request" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mrp_purchase_request_wizard" model="ir.actions.act_window">
        <field name="name">Create Purchase Request</field>
        <field name="res_model">mrp.purchase.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
