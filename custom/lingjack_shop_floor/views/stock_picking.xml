<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_add_quantity_requested" model="ir.ui.view">
        <field name="name">stock.picking.form.add.quantity.requested</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']" position="before">
                <field name="production_count" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='quantity']" position="before">
                <field name="quantity_requested" string="Quantity Requested" readonly="1" column_invisible="parent.production_count &lt; 1"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="mrp_production_id" string="Manufacturing Order" readonly="1" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>