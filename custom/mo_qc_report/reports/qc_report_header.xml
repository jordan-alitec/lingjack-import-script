<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Inherited external_layout_standard to change the header design and values and to hide footer for QC report template -->
	<template id="external_layout_standard"
		inherit_id="web.external_layout_standard">
		<xpath
			expr="//div[@t-attf-class='header o_company_#{company.id}_layout']"
			position="replace">
			<t
				t-if="(doc_model in ['mrp.production']) and (env['ir.actions.report'].search([('report_name', '=', xmlid)]).name in ['Quality Control'])">
				<div t-attf-class="header o_company_#{company.id}_layout"
					style="padding-top: 2mm;" >
					<div class="row">
						<div class="col-3" style="width: 39%">
							<t t-if="o.company_id.logo">
								<img t-att-src="image_data_uri(o.company_id.logo)"
									style="width: 93% !important;" alt="Company Logo" />
							</t>
						</div>
						<div class="col-3" style="width: 61%">
							<div
								style="text-align:left; line-height: 1.2em; letter-spacing: 0.06em;padding-top:4.5%;">
								<div>
									<!-- <ul class="list-unstyled"> -->

									
									<strong>
										<span class="font-dialog"
											style="font-family: sans-serif !important;font-size:15px; font-weight:Bold">
											<t t-esc="o.company_id.name" />
										</span>
									</strong>
									<br></br>
									<strong>
										<span class="font-dialog"
											style="font-family: sans-serif !important;font-size:14px; font-weight:Bold">
											<t t-esc="o.company_id.street" />
										</span>
										<span class="font-dialog"
											style="font-family: sans-serif !important;font-size:14px; font-weight:Bold">
											<t t-esc="o.company_id.street2" />
										</span>
										<span class="font-dialog"
											style="font-family: sans-serif !important;font-size:14px; font-weight:Bold">
											<t t-esc="o.company_id.zip" />
										</span>
										<span class="font-dialog"
											style="font-family: sans-serif !important;font-size:14px; font-weight:Bold">
											<t t-esc="o.company_id.country_id.name" />
										</span>
										
									</strong>
									<br></br>
									<span class="font-dialog"
										style="font-family: sans-serif !important;font-size:14px;">
										Tel:
										<strong>
											<t t-esc="o.company_id.phone" />
										</strong>
									</span>
									<br />

									<span class="font-dialog"
										style="font-family: sans-serif !important;font-size:14px;">
										<strong>
											<t t-esc="o.company_id.website" />
										</strong>
									</span>
									<span class="font-dialog"
										style="font-family: sans-serif !important;font-size:14px; display: inline-flex !important;">
										Email:
										<strong>
											<t t-esc="o.company_id.email" />
										</strong>
									</span>
									<br></br>
									<span class="font-dialog"
										style="font-family: sans-serif !important;font-size:14px; display: inline-flex !important;">
										GST Reg No:<strong>
											<t t-esc="o.company_id.vat" />
										</strong>
									</span>
									<span class="font-dialog"
										style="font-family: sans-serif !important;font-size:14px; display: inline-flex !important;">
										Co Reg No:<strong>
											<t t-esc="o.company_id.company_registry" />
										</strong>
									</span>
								</div>
								
							</div>
						</div>
					</div>

				</div>
			</t>
			<t t-else="">
				<div t-attf-class="header o_company_#{company.id}_layout">
					<div
						class="d-flex justify-content-between align-items-center mb-2">
						<img t-if="company.logo" class="o_company_logo_small"
							t-att-src="image_data_uri(company.logo)" alt="Logo" />
						<div t-if="company.report_header"
							t-field="company.report_header"
							class="o_company_tagline mw-50 fw-bold">Company tagline</div>
					</div>
					<div class="row">
						<div class="col-6" name="company_address">
							<ul class="list-unstyled" name="company_address_list">
								<li t-if="company.is_company_details_empty">
									<span t-field="company.partner_id"
										t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'>
										<div
											class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
											<strong>Company address block</strong>
											<div>Contains the company address.</div>
										</div>
									</span>
								</li>
								<li t-else="">
									<span t-field="company.company_details">
										<div
											class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
											<strong>Company details block</strong>
											<div>Contains the company details.</div>
										</div>
									</span>
								</li>
								<li t-if="not forced_vat" />
								<li t-else="">
									<t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>
									:
									<span t-esc="forced_vat">US12345671</span>
								</li>
							</ul>
						</div>
					</div>
				</div>

			</t>
		</xpath>

		<xpath expr="//div[hasclass('o_footer_content')]"
			position="replace">
			<t
				t-if="(doc_model in ['mrp.production']) and (env['ir.actions.report'].search([('report_name', '=', xmlid)]).name in ['Quality Control'])">
				<div></div>
			</t>
			<t t-else="">
				<div
					t-attf-class="footer o_company_#{company.id}_layout {{report_type != 'pdf' and 'mt-auto'}}">
					<div class="o_footer_content d-flex border-top pt-2">
						<div class="flex-grow-1 text-start me-2"
							t-field="company.report_footer" />
						<div class="text-end text-muted">
							<div t-if="report_type == 'pdf' and display_name_in_footer"
								t-out="o.name">(document name)</div>
							<div t-if="report_type == 'pdf'">
								Page
								<span class="page" />
								/
								<span class="topage" />
							</div>
						</div>
					</div>
				</div>
			</t>

		</xpath>
	</template>
</odoo>