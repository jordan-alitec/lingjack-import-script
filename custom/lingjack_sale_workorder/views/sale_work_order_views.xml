<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Work Order Line Tree View -->
    <record id="view_sale_work_order_line_tree" model="ir.ui.view">
        <field name="name">sale.work.order.line.tree</field>
        <field name="model">sale.work.order.line</field>
        <field name="arch" type="xml">
            <list string="Work Order Lines">
                <field name="sequence" widget="handle"/>
                <field name="sale_line_id"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="product_uom_id"/>
                <field name="qty_remaining_to_create_swo"/>
                <field name="qty_produced"/>
                <field name="qty_remaining" readonly="1"/>
                <field name="qty_in_stock" string="Stored In Qty" readonly="1"/>
                <field name="has_custom_destination" string="Custom Dest." widget="boolean_toggle"/>
                <field name="destination_location_id" string="Destination" optional="show"/>
                <field name="state" 
                       decoration-success="state == 'produced'"
                       decoration-warning="state == 'in_production'"
                       decoration-info="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"
                       widget="badge"/>
                <field name="production_count"/>
            </list>
        </field>
    </record>

    <!-- Sale Work Order Line Form View -->
    <record id="view_sale_work_order_line_form" model="ir.ui.view">
        <field name="name">sale.work.order.line.form</field>
        <field name="model">sale.work.order.line</field>
        <field name="arch" type="xml">
            <form string="Work Order Line">
                <header>
                    <button name="action_create_production" 
                            string="Create Manufacturing Order" 
                            type="object" 
                            class="btn-primary"
                            invisible="state not in ['confirmed', 'in_production'] or qty_remaining &lt;= 0" groups="mrp.group_mrp_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_production,produced,delivered"/>
                </header>
                <sheet>
                    <group>
                        <group string="Sale Order Information">
                            <field name="sale_line_id" readonly="state not in ['draft']"/>
                            <field name="qty_remaining_to_create_swo" readonly="1"/>
                            <field name="cs_in_charge_id" readonly="1"/>
                        </group>
                        <group string="Product Information">
                            <field name="product_id" readonly="state not in ['draft']"/>
                            <field name="product_template_id" invisible="1"/>
                            <field name="quantity_on_hand"/>
                            <field name="forecast_quantity"/>
                            <field name="product_qty" readonly="state not in ['draft','confirmed']" />
                            <field name="product_uom_id" readonly="state not in ['draft']"/>
                        </group>
                        <group string="Destination">
                            <field name="has_custom_destination" readonly="state not in ['draft']"/>
                            <field name="destination_location_id" readonly="state not in ['draft']"/>
                        </group>
                    </group>
                    <group>
                        <group string="Production Status">
                            <field name="qty_produced" readonly="1"/>
                            <field name="qty_remaining" readonly="1"/>
                            <field name="qty_in_stock" string="Stored In Qty" readonly="1"/>
                            <field name="production_count"/>
                        </group>
                    </group>
                    <group string="Remarks">
                        <field name="remarks" nolabel="1" placeholder="Additional notes or special instructions for this product..."/>
                    </group>
                    <notebook>
                        <page string="Manufacturing Orders" invisible="production_count == 0">
                            <field name="production_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="product_qty"/>
                                    <field name="qty_produced"/>
                                    <field name="state" widget="badge"/>
                                    <field name="date_start"/>
                                    <field name="date_finished"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sale Work Order Tree View -->
    <record id="view_sale_work_order_tree" model="ir.ui.view">
        <field name="name">sale.work.order.tree</field>
        <field name="model">sale.work.order</field>
        <field name="arch" type="xml">
            <list string="Sale Work Orders" default_order="request_date desc">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="request_date"/>
                <field name="state" 
                       decoration-success="state == 'produced'"
                       decoration-warning="state == 'in_production'"
                       decoration-info="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"
                       widget="badge"/>
                <field name="production_count"/>
            </list>
        </field>
    </record>

    <!-- Sale Work Order Form View -->
    <record id="view_sale_work_order_form" model="ir.ui.view">
        <field name="name">sale.work.order.form</field>
        <field name="model">sale.work.order</field>
        <field name="arch" type="xml">
            <form string="Sale Work Order">
                <header>
                    <button name="action_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="btn-primary"
                            groups="lingjack_sale_workorder.group_manage_swo"
                            invisible="state != 'draft'"/>
                    <button name="action_reset_draft"
                            string="Reset to Draft"
                            type="object"
                            class="btn-primary"
                            groups="lingjack_sale_workorder.group_manage_swo"
                            invisible="state != 'confirmed'"/>
                    <button name="action_view_productions" 
                            string="View Productions" 
                            type="object" 
                            class="btn-secondary"
                            groups="lingjack_sale_workorder.group_manage_swo"
                            invisible="production_count == 0"/>
                    <button name="action_cancel"
                            string="Cancel" 
                            type="object" 
                            class="btn-secondary"
                            groups="lingjack_sale_workorder.group_manage_swo"
                            invisible="state in ['cancelled', 'delivered']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_production,produced,delivered"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_productions" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-cogs"
                                invisible="production_count == 0">
                            <field name="production_count" widget="statinfo" string="Productions"/>
                        </button>
                        <button name="action_open_time_tracking_gantt"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                invisible="production_count == 0">

                             <div class="o_stat_info">
                                <span class="o_stat_text">Time Tracking</span>
                            </div>

                        </button>
                        <button class="oe_stat_button" 
                                icon="fa-clock-o"
                                invisible="not has_pending_mo">
                            <field name="pending_mo_count" widget="statinfo" string="Pending MO Ceration"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Sale Information">
                            <field name="sale_order_id" 
                                   domain="[('state', 'in', ['sale', 'done'])]"
                                   options="{'no_create': True}"
                                   readonly="state != 'draft'"/>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="customer_id" readonly="state != 'draft'"/>
                        </group>
                        <group string="Remarks">
                            <field name="remarks" nolabel="1" placeholder="Additional notes or special instructions for production..." groups="lingjack_sale_workorder.group_manage_swo"/>
                            <field name="remarks" nolabel="1" placeholder="Additional notes or special instructions for production..." readonly="1" groups="!lingjack_sale_workorder.group_manage_swo"/>
                            <field name="has_pending_mo" invisible="1"/>
                                         <field name="company_id" readonly="1" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Work Order Lines" name="work_order_lines">
                            <field name="line_ids" 
                                   context="{'default_work_order_id': id}"
                                   readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sale_order_id" column_invisible="1"/>
                                    <field name="sale_line_id"/>
                                    <field name="product_id"
                                           required="1"/>
                                    <field name="quantity_on_hand"  optional="hide"/>
                                    <field name="forecast_quantity" optional="hide"/>
                                    <field name="product_qty"  optional="show"/>
                                    <field name="product_uom_id"/>
                                    <field name="qty_remaining_to_create_swo" column_invisible="1" readonly="1"  optional="show"/>
                                    <field name="qty_produced" readonly="1" optional="show"/>
                                    <field name="qty_remaining" readonly="1"  optional="show"/>
                                    <field name="qty_in_stock" readonly="1"  optional="show"/>
                                    <field name="destination_warehouse_id" optional="show"/>
                                    <field name="state" widget="badge"/>
                                    <field name="production_count"/>
                                    <button name="action_create_production" 
                                            string="Create MO" 
                                            type="object" 
                                            class="btn btn-link"
                                            invisible="state not in ['confirmed', 'draft']"
                                            groups="mrp.group_mrp_manager"/>
                                </list>
                            </field>
                        </page>
                        <page string="Manufacturing Orders" invisible="production_count == 0">
                            <field name="production_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="qty_produced"/>
                                    <field name="state" widget="badge"/>
                                    <field name="date_start"/>
                                    <field name="date_finished"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Sale Work Order Search View -->
    <record id="view_sale_work_order_search" model="ir.ui.view">
        <field name="name">sale.work.order.search</field>
        <field name="model">sale.work.order</field>
        <field name="arch" type="xml">
            <search string="Sale Work Orders">
                <field name="name" string="Reference"/>
                <field name="sale_order_id" string="Sale Order"/>
                <field name="customer_id" string="Customer"/>
                
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="In Production" name="in_production" domain="[('state', '=', 'in_production')]"/>
                <filter string="Produced" name="produced" domain="[('state', '=', 'produced')]"/>
                
                <separator/>
                <filter string="Has Production Lines" name="has_lines" domain="[('line_ids', '!=', False)]"/>
                
                <separator/>
                <filter string="Today" name="today" domain="[('request_date', '&gt;=', context_today())]"/>
                <filter string="This Week" name="this_week" domain="[('request_date', '&gt;=', (context_today() - datetime.timedelta(days=7)))]"/>
                
                <group expand="1" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Request Date" name="group_request_date" context="{'group_by': 'request_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sale Work Order Kanban View -->
    <record id="view_sale_work_order_kanban" model="ir.ui.view">
        <field name="name">sale.work.order.kanban</field>
        <field name="model">sale.work.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="state"/>
                <field name="request_date"/>
                <field name="production_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="sale_order_id"/>
                                        </div>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Customer:</strong><br/>
                                            <field name="customer_id"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Productions:</strong><br/>
                                            <field name="production_count"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="request_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'confirmed': 'info', 'in_production': 'warning', 'produced': 'success', 'cancelled': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sale Work Order Action -->
    <record id="action_sale_work_order" model="ir.actions.act_window">
        <field name="name">Sale Work Orders</field>
        <field name="res_model">sale.work.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Sale Work Order!
            </p>
            <p>
                Sale Work Orders can be created automatically from sales orders 
                or manually by the sales team. They help the production 
                department plan and organize manufacturing activities.
            </p>
        </field>
    </record>

    <!-- Sale Work Order Action for Production Department -->
    <record id="action_sale_work_order_production" model="ir.actions.act_window">
        <field name="name">Manufacturing Demands</field>
        <field name="res_model">sale.work.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_confirmed': 1, 'search_default_has_lines': 1, 'create':0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No manufacturing demands found!
            </p>
            <p>
                Manufacturing demands are created automatically when sales orders 
                with manufacturing products are confirmed. Review and create 
                manufacturing orders from confirmed work orders.
            </p>
        </field>
    </record>

    <!-- Extended Sale Order Form View -->
    <record id="view_sale_order_form_work_orders" model="ir.ui.view">
        <field name="name">sale.order.form.work.orders</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_work_orders" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-cogs"
                        invisible="work_order_count == 0">
                    <field name="work_order_count" widget="statinfo" string="Work Orders"/>
                </button>
            </div>
            <field name="partner_id" position="after">
                <field name="work_order_count" invisible="1"/>
            </field>
        </field>
    </record>

</odoo> 